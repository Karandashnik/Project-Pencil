<!DOCTYPE HTML>
<html lang="en-US">
<head>
  <title>{{title}}</title>
</head>
<body>
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>
  <div id="login">
    <form method="post" action="/">
      <h2>Log in</h2>
      <input name="username">Username or email</input>
      <br>
      <input name="password">Password</input>
      <br>
      <button type="submit">Log In</button>
    </form>
  </div>
  <div id="register">
    <form method="post" action="/users">
      <h2>Register</h2>
      <input name="newEmail">Email</input>
      <br>
      <input name="newUsername">Username</input>
      <br>
      <input name="newPassword">Password</input>
      <br>
      <button type="submit">Sign Up</button>
    </form>
  </div>
  <h2>{{error}}</h2>
</body>
</html>
