<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Penciled In</title>

    <script id="profile-template" type="text/x-handlebars-template">
        <div class="container-fluid">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Profile Information</h3>
                </div>
                <div class="row">
                    <div class="panel-body">
                        <div class="col-xs-12 col-md-4">
                            <p>Username: {{user.username}}</p>

                            <p>First Name: {{user.firstName}}</p>

                            <p>Last Name: {{user.lastName}}</p>
                        </div>
                        <div class="col-xs-12 col-md-4">
                            <div id="kidList">
                                <h4>Enrolled Children</h4>
                                <ul class="list-group">
                                    <li class="list-group-item">Vienna Goodwin</li>
                                    <li class="list-group-item">Breton Goodwin</li>
                                    <button type="button" class="list-group-item btn-danger" data-toggle="modal"
                                            data-target="#kidModal">Add a Child
                                    </button>
                                </ul>

                            </div>
                        </div>
                        <div class="col-xs-12 col-md-4">
                        <span class="glyphicon glyphicon-calendar glyphicon-align-left" id="calendarIcon"
                              aria-hidden="true"></span>

                            <form id="seeCalendar" action="/calendar" method="get"><input type="submit"
                                                                                          value="See Calendar"></form>
                            <!-- Button trigger modal -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">

  <body>

    <div class="container">
        <nav class="navbar navbar-default" role="navigation">

      <div class="container-fluid">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              {{#if user}}
                <p class="navbar-text">
                  <strong>Hi,</strong>
                  {{user.username}}
                </p>
                </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <a href="/logout">Log Out</a>
                  </li>
              {{else}}
                </li>
              {{/if}}
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    {{#if error}}
      <p class="alert alert-warning">{{error}}</p>
    {{/if}}

    {{#if success}}
      <p class="alert alert-success">{{success}}</p>
    {{/if}}

    {{#if notice}}
      <p class="alert alert-info">{{notice}}</p>
    {{/if}}

    <!--where our other templates will insert-->
    {{{body}}}
     <!-- /container -->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="http://code.jquery.com/jquery-2.1.4.js"></script>
    <!--underscore-->
    <script src="http://underscorejs.org/underscore.js" type="text/javascript"></script>
    <!--backbone-->
    <script src="http://backbonejs.org/backbone.js" type="text/javascript"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/backbone-localstorage.js/1.0/backbone.localStorage-min.js" type="text/javascript"></script>
    </head>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
</body>
</html>
