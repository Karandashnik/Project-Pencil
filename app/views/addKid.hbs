<!-- Modal -->
<div class="modal fade" id="kidModal" tabindex="-1" role="dialog" aria-labelledby="kidModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <!-- <h4 class="modal-title" id="kidModalLabel">Add a Child</h4> -->
      </div>
      <div class="modal-body">
        <form id="kid-reg" class="kid-registration" action="/kid-reg" method="post">
          <div class="row">
            <div class="form-group col-md-6 col-md-offset-3">
              <h1 class="form-signin-heading">Register a Child</h1>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-4 col-md-offset-3">
              <label for="kidFirstName" class="sr-only">Child First Name</label>
              <input type="text" id="kidFirstName" class="form-control" placeholder="Child First Name" required="" autofocus="" name="kidFirstName">
            </div>
            <div class="form-group col-md-2">
              <label for="kidsMidInitial" class="sr-only">MI</label>
              <input type="text" id="kidMidInitial" class="form-control" placeholder="MI" required="" autofocus="" name="kidMidInitial">
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 col-md-offset-3">
              <label for="kidLastName" class="sr-only">Child Last Name</label>
              <input type="text" id="kidLastName" class="form-control" placeholder="Child Last Name" required="" autofocus="" name="kidLastName">
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary addKid" type="submit">Submit</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Add Another Child</button>
      </div>
    </div>
  </div>
</div>
