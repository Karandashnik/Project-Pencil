<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Profile Information</h3>
        </div>
        <div class="row">
            <div class="panel-body">
                <div class="col-xs-12 col-md-4">
                    <p>Username: {{user.username}}</p>

                    <p>First Name: {{user.firstName}}</p>

                    <p>Last Name: {{user.lastName}}</p>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div id="kidList">
                        <h4>Enrolled Children</h4>
                        <ul class="list-group">
                            <li class="list-group-item">Vienna Goodwin</li>
                            <li class="list-group-item">Breton Goodwin</li>
                            <button type="button" class="list-group-item btn-danger" data-toggle="modal"
                                    data-target="#kidModal">Add a Child
                            </button>
                        </ul>

                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                        <span class="glyphicon glyphicon-calendar glyphicon-align-left" id="calendarIcon"
                              aria-hidden="true"></span>

                    <form id="seeCalendar" action="/calendar" method="get"><input type="submit"
                                                                                  value="See Calendar"></form>
                    <!-- Button trigger modal -->

                </div>
            </div>
        </div>
    </div>
</div>